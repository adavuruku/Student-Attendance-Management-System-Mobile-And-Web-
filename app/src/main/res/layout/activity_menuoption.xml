<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sherif.atbuattendance.Menuoption">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            >
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:titleTextColor="@color/colorwhite"
                app:title="@string/app_name"
                android:background="@color/colorPrimary"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:padding="5dp"
                android:text="Loading..."
                android:textAlignment="center"
                android:textColor="@color/fairwhite"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                android:layout_marginBottom="60dp"/>
            <Button
                android:id="@+id/attendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@color/colorPrimary"
                android:drawableLeft="@android:drawable/checkbox_on_background"
                android:drawableRight="@android:drawable/checkbox_on_background"
                android:paddingBottom="15sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingTop="15sp"
                android:text="MARK ATTENDANCE"
                android:textAllCaps="true"
                android:layout_marginBottom="15sp"
                android:textColor="@color/fairwhite"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="14dp"
                android:background="@color/colorBlack"
                android:drawableLeft="@drawable/ic_save"
                android:drawableRight="@drawable/ic_save"
                android:paddingBottom="15sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingTop="15sp"
                android:text="UPLOAAD ATTENDANCE"
                android:textAllCaps="true"
                android:textColor="@color/fairwhite"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="14dp"
                android:background="@color/colorAccent"
                android:drawableLeft="@drawable/ic_logout"
                android:drawableRight="@drawable/ic_logout"
                android:paddingBottom="15sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingTop="15sp"
                android:text="SIGN OUT"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
</android.support.constraint.ConstraintLayout>
